<Window x:Class="VoiceSynthWPF.SnippetCreationWind"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:VoiceSynthWPF"
        mc:Ignorable="d"
        Title="SnippetCreationWind" WindowStartupLocation="CenterOwner"
        Height="250" Width="500" WindowStyle="None">
    <Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Background="{StaticResource PanelsBrush}" MouseLeftButtonDown="TopBar_MouseDown">
                <Grid>
                    <TextBlock x:Name="TitleTextBlock" Text="SAMPLE" Foreground="{StaticResource PrimaryTextBrush}" FontSize="16" FontWeight="Bold"
                               VerticalAlignment="Center" Margin="16,0"/>
                </Grid>
            </Border>

            <Grid Background="{StaticResource PanelsBrush2}" Grid.Row="1" >
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid>
                        <TextBlock x:Name="DescTextField" Text="SAMPLE" Foreground="{StaticResource PrimaryTextBrush}" FontSize="12" FontWeight="Bold" VerticalAlignment="Top" Margin="10"/>
                    </Grid>
                    <Grid Column="1">
                        <StackPanel>
                            <Border Margin="10" Height="30" VerticalAlignment="Top" BorderThickness="1" BorderBrush="#2b2b2b">
                                <Button x:Name="OkButton" Style="{StaticResource FlatButtonStyle}" Content="OK" Click="Ok_Click"/>
                            </Border>
                            <Border Visibility="Hidden" Margin="10,0,10,10" Height="30" VerticalAlignment="Top" BorderThickness="1" BorderBrush="#2b2b2b">
                                <Button x:Name="CancelButton" Style="{StaticResource FlatButtonStyle}" Content="Cancel" Click="CancelButton_OnClick"/>
                            </Border>
                        </StackPanel>

                    </Grid>
                </Grid>
                <Grid Row="1">
                    <Border BorderThickness="1" BorderBrush="#2b2b2b" Margin="10,5,10,10">
                        <StackPanel>
                            <TextBox x:Name="Input" Background="{StaticResource PrimaryBrush}" 
                                     Foreground="{StaticResource PrimaryTextBrush}" 
                                     FontWeight="Bold" 
                                     Height="60"
                                     VerticalAlignment="Center" Margin="10,5,10,5"/>
                            <TextBox x:Name="Input2" Background="{StaticResource PrimaryBrush}" 
                                     Foreground="{StaticResource GrayTextBrush}" 
                                     FontWeight="Bold" 
                                     VerticalAlignment="Center" Margin="10,5,10,5" Text="Нажмите любую кнопку"
                                     PreviewKeyDown="Input2_PreviewKeyDown"
                                     IsReadOnly="True"
                                     TextAlignment="Center"
                                     Focusable="True"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
